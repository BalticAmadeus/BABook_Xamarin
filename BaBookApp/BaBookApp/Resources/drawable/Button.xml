<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
        android:color="#c6068c" />
      <stroke
        android:width="1dp"
        android:color="#940569" />
      <corners
        android:radius="7dp" />
      <padding
        android:left="15dp"
        android:top="8dp"
        android:right="15dp"
        android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
        android:startColor="#fa52c7"
        android:endColor="@color/SecondMainColor"
        android:angle="270" />
      <stroke
        android:width="1dp"
        android:color="#df079e" />
      <corners
        android:radius="7dp" />
      <padding
        android:left="15dp"
        android:top="8dp"
        android:right="18dp"
        android:bottom="8dp" />
    </shape>
  </item>
</selector>